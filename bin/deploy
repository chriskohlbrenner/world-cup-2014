#!/usr/bin/env ruby
io = IO.popen("git remote -v")
log = io.readlines

if !log.any? {|line| line.match(/heroku/)}
  puts <<-ERROR.gsub(/^ {6}/, '')
  You must run `bin/setup` first!
  ERROR
else
  system("git push heroku master && heroku run rake update:game_results && heroku run rake update:teams && heroku run rake update:players && heroku open")
end

# ADD "&& heroku run rake update:match_events"