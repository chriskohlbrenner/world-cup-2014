<div class="col-md-4 index-match home">
  <h3>Most recent match:</h3>
  <% match = @recent_match %>
  <% home_team = match.teams[0] %>
  <% away_team = match.teams[1] %>
  <h4>Group <%= home_team.group_letter %></h4>
  <h3 id="match-date"><%= link_to match.display_time, match_path(match) %></h3>
  <p class="score"><a href="/teams/<%= home_team.id %>" id="<%= "winner" if match.winner == home_team %>"><span class="<%= "loser" if match.loser == home_team %> <%= "winner" if match.winner == home_team %>"><img src="<%= home_team.logo %>"/><%= home_team.name %></span></a>: <%= match.home_score %> - <a href="/teams/<%= away_team.id %>" id="<%= "winner" if match.winner == away_team %>"><span class="<%= "loser" if match.loser == away_team %> <%= "winner" if match.winner == away_team %>"><img src="<%= away_team.logo %>"/><%= away_team.name %></span></a>: <%= match.away_score %></p>
</div>

<div class="col-md-4 index-match home">
  <h3>Matches in progress:</h3>
  <%= "No matches are currently being played." if @current_matches.empty?  %>
  <% @current_matches.each do |match| %>
  <% home_team = match.teams[0] %>
  <% away_team = match.teams[1] %>
  <h4>Group <%= home_team.group_letter %></h4>
  <h3 id="match-date"><a href="/matches/<%= match.id %>"><%= "Live, " + match.current_game_minutes.to_s + "'" if !match.current_game_minutes.nil? %></a></h3>
  <p class="score"><a href="/teams/<%= home_team.id %>"><span><img src="<%= home_team.logo %>"/><%= home_team.name %></span></a>: <%= match.home_score %> - <a href="/teams/<%= away_team.id %>"><span><img src="<%= away_team.logo %>"/><%= away_team.name %></span></a>: <%= match.away_score %></p>
  <% end  %>
</div>

<div class="col-md-4 index-match home">
  <h3>Next match:</h3>
  <% match = @next_match %>
  <% home_team = match.teams[0] %>
  <% away_team = match.teams[1] %>
  <h4>Group <%= home_team.group_letter %></h4>
  <h3 id="match-date"><%= link_to match.display_time, match_path(match) %></h3>
  <p class="score"><a href="/teams/<%= home_team.id %>"><span><img src="<%= home_team.logo %>"/><%= home_team.name %></span>: <%= match.home_score %> - <a href="/teams/<%= away_team.id %>"><span><img src="<%= away_team.logo %>"/><%= away_team.name %></span></a>: <%= match.away_score %></p>
</div>